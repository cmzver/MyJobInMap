# FieldWorker Environment Configuration
# Скопируйте в .env и заполните значения

# ============================================
# Server Configuration
# ============================================

# Database (SQLite для dev, PostgreSQL для prod)
DATABASE_URL=sqlite:///./tasks.db
# DATABASE_URL=postgresql://user:password@localhost:5432/fieldworker

# JWT Secret Key (сгенерируйте: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8001

# Logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# Firebase (Push-уведомления)
# ============================================

# Путь к файлу сервисного аккаунта Firebase
FIREBASE_CREDENTIALS=firebase-service-account.json

# ============================================
# Image Optimization
# ============================================

# Включить оптимизацию изображений (true/false)
IMAGE_OPTIMIZATION_ENABLED=true

# Качество сжатия JPEG/WebP (1-100, рекомендуется 80-90)
IMAGE_QUALITY=85

# Максимальный размер изображения в пикселях (ширина или высота)
IMAGE_MAX_DIMENSION=1920

# Конвертировать все изображения в WebP (true/false)
IMAGE_CONVERT_TO_WEBP=false

# Удалять EXIF метаданные (true/false)
IMAGE_STRIP_METADATA=true
